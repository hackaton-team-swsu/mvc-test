@model Swsu.Test.Asp.Models.Purchase
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h3>Форма оформления покупки</h3>
    @using(Html.BeginForm("Buy", "Home", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.GuitarId)
        @Html.LabelFor(m => m.Person, "Введите своё имя")
        <br />
        @Html.TextBoxFor(m => m.Person)
        <br />
        <br />
        @Html.LabelFor(m => m.Address, "Введите адрес доставки")
        <br />
        @Html.TextBoxFor(m => m.Address)
        <input type="submit" value="Отправить"/>
    }
</div>
